          success: function (rs) {
            console.log('rs', rs);
            alert("active success");
            window.location.reload();
          },
        });
      }
      function deleteAuthor(id) {
        $.ajax({
          type: "POST",
          url: `/admin/author/disable/${id}`,
          success: function (rs) {
            console.log('rs', rs);
            alert("disable success");
            window.location.reload();
          },
        });
      }
      function activeAuthor(id) {
        $.ajax({
          type: "POST",
          url: `/admin/author/active/${id}`,
          success: function (rs) {
            console.log('rs', rs);
            alert("active success");
            window.location.reload();
          },
        });
      }
      function deletePromotion(id) {
        $.ajax({
          type: "DELETE",
          url: `/admin/promotion/delete/${id}`,
          success: function (rs) {
            alert("delete success");
            window.location.reload();
          },
        });
      }
      function uploadImage() {
        var fileInput = document.getElementById("image_file");
        var file = fileInput.files[0];
        if (!file) {
          return alert("Vui lòng chọn ảnh");
        }
        var formData = new FormData();
        formData.append("file", file);

        $.ajax({
          url: "/admin/products/upload-image",
          type: "POST",
          data: formData,
          processData: false,
          contentType: false,
          success: function (response) {
            document.getElementById("imageUpload").src = response.urlUploaded;
            document.getElementById("imageUrl").value = response.urlUploaded;
          },
          error: function (xhr, status, error) {
            // Xử lý lỗi
          },
        });
      }
      function uploadImageForEdit() {
        var fileInput = document.getElementById("image_file_edit");
        var file = fileInput.files[0];
        if (!file) {
          return alert("Vui lòng chọn ảnh");
        }
        var formData = new FormData();
        formData.append("file", file);

        $.ajax({
          url: "/admin/products/upload-image",
          type: "POST",
          data: formData,
          processData: false,
          contentType: false,
          success: function (response) {
            document.getElementById("imageUploadEdit").src =
              response.urlUploaded;
            document.getElementById("imageUrlEdit").value =
              response.urlUploaded;
          },
          error: function (xhr, status, error) {
            // Xử lý lỗi
          },
        });
      }
    </script>
  </body>
</html>
